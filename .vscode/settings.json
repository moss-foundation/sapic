{
  "rust-analyzer.showUnlinkedFileNotification": false,
  "rust-analyzer.cargo.features": ["integration-tests"],
  "todohighlight.keywords": [
    {
      "text": "NOTE:",
      "color": "#f5f5f4",
      "backgroundColor": "#171717",
      "isWholeLine": false
    },
    {
      "text": "TODO:",
      "color": "#171717",
      "backgroundColor": "#facc15",
      "isWholeLine": false
    },
    {
      "text": "OPTIMIZE:",
      "color": "#171717",
      "backgroundColor": "#d97706",
      "isWholeLine": false
    },
    {
      "text": "BUG:",
      "color": "#171717",
      "backgroundColor": "#b91c1c",
      "isWholeLine": false
    },
    {
      "text": "FIXME:",
      "color": "#171717",
      "backgroundColor": "#f87171",
      "isWholeLine": false
    },
    {
      "text": "HACK:",
      "color": "#171717",
      "backgroundColor": "#9333ea",
      "isWholeLine": false
    },
    {
      "text": "SAFETY:",
      "color": "#171717",
      "backgroundColor": "#10b981",
      "isWholeLine": false
    }
  ],
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "cSpell.words": [
    "activegroup",
    "desanitize",
    "Dockview",
    "docschema",
    "dodgerblue",
    "hiddenpanel",
    "inactivegroup",
    "indexmap",
    "paneview",
    "rgba",
    "sapic",
    "segkey",
    "tabslist",
    "tauri",
    "visiblepanel",
    "worktree",
    "Русский"
  ],
}
